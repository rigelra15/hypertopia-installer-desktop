{
  "categories": [
    {
      "title": "## ‚ú® New Features",
      "labels": ["feat", "feature"]
    },
    {
      "title": "## üêõ Bug Fixes",
      "labels": ["fix", "bug"]
    },
    {
      "title": "## üöÄ Improvements",
      "labels": ["perf", "refactor", "style"]
    },
    {
      "title": "## üì¶ Maintenance",
      "labels": ["chore", "build", "ci"]
    }
  ],
  "ignore_labels": ["ignore"],
  "sort": "date",
  "template": "${{CHANGELOG}}\n\n${{UNCATEGORIZED}}",
  "pr_template": "- ${{TITLE}}\n${{BODY}}",
  "commit_template": "### ${{TITLE}}\n${{BODY}}\n",
  "empty_template": "No notable changes in this release.",
  "label_extractor": [
    {
      "pattern": "^(feat|fix|chore|perf|refactor|style|build|ci)(\\(.+\\))?:",
      "target": "$1",
      "method": "match",
      "on_property": "title"
    }
  ],
  "transformers": [
    {
      "pattern": "^(feat|fix|chore|perf|refactor|style|build|ci)(\\(.+\\))?:\\s*",
      "target": ""
    }
  ],
  "max_tags_to_fetch": 200,
  "max_pull_requests": 200,
  "max_back_track_time_days": 365
}

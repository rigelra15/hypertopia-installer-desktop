{
  "categories": [
    {
      "title": "## âœ¨ New Features",
      "labels": ["feat", "feature"]
    },
    {
      "title": "## ğŸ› Bug Fixes",
      "labels": ["fix", "bug"]
    },
    {
      "title": "## ğŸš€ Improvements",
      "labels": ["perf", "refactor", "style"]
    },
    {
      "title": "## ğŸ“¦ Maintenance",
      "labels": ["chore", "build", "ci"]
    }
  ],
  "ignore_labels": ["ignore"],
  "sort": "date",
  "template": "${{CHANGELOG}}",
  "commit_template": "- ${{COMMIT_MESSAGE}} (${{COMMIT_AUTHOR}})",
  "empty_template": "No notable changes in this release.",
  "label_extractor": [
    {
      "pattern": "^(feat|fix|chore|perf|refactor|style|build|ci)(\\(.+\\))?:",
      "target": "$1",
      "on_property": "title"
    }
  ],
  "transformers": [
    {
      "pattern": "^(feat|fix|chore|perf|refactor|style|build|ci)(\\(.+\\))?:\\s*",
      "target": ""
    }
  ]
}
